<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- Configuración del servlet de inicio de sesión -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.proyecto_TEAM3_24112_Backend.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Configuración del servlet de gestión de usuarios -->
    <servlet>
        <servlet-name>GestionUsuariosServlet</servlet-name>
        <servlet-class>com.proyecto_TEAM3_24112_Backend.servlets.GestionUsuariosServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GestionUsuariosServlet</servlet-name>
        <url-pattern>/gestion-usuarios</url-pattern>
    </servlet-mapping>

    <!-- Configuración del servlet de registro -->
    <servlet>
        <servlet-name>RegistroServlet</servlet-name>
        <servlet-class>com.proyecto_TEAM3_24112_Backend.servlets.RegistroServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistroServlet</servlet-name>
        <url-pattern>/registro</url-pattern>
    </servlet-mapping>

</web-app>
